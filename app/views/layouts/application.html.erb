<!DOCTYPE html>
<html>
<head>
  <title>LinkBoardLab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <ul class="nav nav-pills">
    <li role="presentation"><a href="/">homepage</a></li>
    <li role="presentation"><a href="/posts">posts</a></li>
    <% if @user%>
      <li role="presentation"><a href="/logout">log out</a></li>
    <% else %>
      <li role="presentation"><a href="/login">log in</a></li>
      <li role="presentation"><a href="/signup">sign up</a></li>
    <% end %>
  </ul>
</nav>

<%= yield %>

</body>
</html>
